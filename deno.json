{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "lib": [
      "deno.window",
      "deno.unstable"
    ]
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 90,
    "proseWrap": "preserve",
    "semiColons": true,
    "singleQuote": false,
    "useTabs": false
  },
  "importMap": "./import-map.json",
  "lint": {
    "rules": {
      "exclude": [
        "no-namespace"
      ]
    }
  },
  "tasks": {
    "format": "deno fmt --unstable --config=deno.json",
    "format:check": "deno task format --check",
    "lint": "deno lint --unstable --config=deno.json",
    "manage": "deno run --allow-all bin/manage.ts",
    "test": "deno test --allow-all --unstable --allow-none --config=deno.json"
  }
}
